<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">rookiesoft_customertags_guestcustomer_form_view.rookiesoft_customertags_guestcustomer_form_view_data_source</item>
            <item name="deps" xsi:type="string">rookiesoft_customertags_guestcustomer_form_view.rookiesoft_customertags_guestcustomer_form_view_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">View Guest Customer</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">rookiesoft_customertags_guestcustomer_form_view</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
      <!--   <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="string">RookieSoft\CustomerTags\Block\Adminhtml\GuestCustomer\Edit\BackButton</item>
            <item name="save" xsi:type="string">RookieSoft\CustomerTags\Block\Adminhtml\GuestCustomer\Edit\SaveButton</item>
        </item> -->
    </argument>
    <dataSource name="employee_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">RookieSoft\CustomerTags\Model\GuestCustomerForm</argument>
            <argument name="name" xsi:type="string">rookiesoft_customertags_guestcustomer_form_view_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
                <item name="submit_url" path="*/*/save"  xsi:type="url"/>
            </item>
        </argument>
    </dataSource>
    <fieldset name="sales_order_view_columns">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true">View Guest Customer</item>
                <item name="sortOrder" xsi:type="number">20</item>
            </item>
        </argument>
        <field name="customer_email">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Email</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="disabled" xsi:type="string">true</item>
                    <item name="source" xsi:type="string">customer_email</item>
                    <item name="dataScope" xsi:type="string">customer_email</item>
                </item>
            </argument>
        </field>
        <field name="sales">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">RookieSoft\CustomerTags\Ui\Component\Listing\GuestCustomer\Column\Sales</item>
                <item name="config" xsi:type="array">
                   <item name="dataType" xsi:type="string">number</item>
                    <item name="label" xsi:type="string" translate="true">Sales</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <!-- <item name="options" xsi:type="string">RookieSoft\CustomerTags\Ui\Component\Listing\GuestCustomer\Column\Sales</item> -->
                    <item name="disabled" xsi:type="string">true</item>
                    <item name="source" xsi:type="string">item</item>
                    <item name="dataScope" xsi:type="string">sales</item>
                </item>
            </argument>
            <!-- <formElements>
                <select>
                    <settings>
                        <options class="RookieSoft\CustomerTags\Ui\Component\Listing\GuestCustomer\Column\Sales"/>
                    </settings>
                </select>
            </formElements> -->
        </field>
    </fieldset>


</form>
