        <index referenceId="ROOKIESOFT_CUSTOMERTAGS_ENTITY_TAG_ENTITY_ID" indexType="btree">
            <column name="entity_id"/>
        </index>
        <index referenceId="ROOKIESOFT_CUSTOMERTAGS_ENTITY_TAG_TAG_CODE" indexType="btree">
            <column name="tag_code"/>
        </index>
